@model ModuleImplementation.Models.Department

<h1>Delete Department</h1>

<h3>Are you sure you want to delete this department?</h3>
<div>
    <h4>Name: @Html.DisplayFor(model => model.Name)</h4>
    <h4>Logo Url: @Html.DisplayFor(model => model.LogoUrl)</h4>
</div>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post" class="mt-3">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
</form>
