@model ModuleImplementation.Models.Department

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h1 class="card-title mb-0">Department Details</h1>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h4 class="card-title">Department Name</h4>
                    <p class="card-text">@Model.Name</p>
                </div>
                <div class="col-md-6 text-center">
                    <img src="@Model.LogoUrl" alt="Department Logo" style="max-width: 100px; max-height: 60px;" />
                </div>
            </div>
            
            <hr />

            <!-- Sub-Departments Section -->
            <div>
                <h4>Sub-Departments:</h4>
                @if (Model.SubDepartments.Any())
                {
                    <ul class="list-group">
                        @foreach (var subDept in Model.SubDepartments)
                        {
                            <li class="list-group-item">@subDept.Name</li>
                        }
                    </ul>
                }
                else
                {
                    <p>No sub-departments found.</p>
                }
            </div>

            <hr />

            <!-- Parent Departments Section -->
            <div>
                <h4>Parent Departments:</h4>
                @if (ViewData["ParentDepartments"] != null && ((List<Department>)ViewData["ParentDepartments"]).Any())
                {
                    <ul class="list-group">
                        @foreach (var parentDept in (List<Department>)ViewData["ParentDepartments"])
                        {
                            <li class="list-group-item">@parentDept.Name</li>
                        }
                    </ul>
                }
                else
                {
                    <p>No parent departments found.</p>
                }
            </div>
        </div>
        <div class="card-footer bg-light">
            <a asp-action="Index" class="btn btn-secondary">Back</a>
        </div>
    </div>
</div>
