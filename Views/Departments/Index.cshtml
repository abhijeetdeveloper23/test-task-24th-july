@model List<ModuleImplementation.Models.Department>

<h1 class="text-center mt-4 mb-5">Department Management</h1>

<div class="container">
    <div class="row justify-content-end mb-3">
        <div class="col-auto">
            <a asp-action="Create" class="btn btn-primary">Create New Department</a>
        </div>
    </div>

    <div class="table-responsive">
        <div style="height: 500px; overflow-y: auto;">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th style="width: 40%;">Name</th>
                        <th style="width: 30%;">Logo</th>
                        <th style="width: 30%;" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td class="text-center">
                                <div class="d-flex justify-content-center align-items-center">
                                    <img src="@item.LogoUrl" alt="Department Logo"
                                        style="max-width: 100px; max-height: 60px;" />
                                </div>
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group" aria-label="Department Actions">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                    @if (Model.Count == 0)
                    {
                        <tr>
                            <td colspan="3" class="text-center">No departments found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
